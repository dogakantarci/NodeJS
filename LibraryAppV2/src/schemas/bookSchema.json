{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1
      },
      "author": {
        "type": "string",
        "minLength": 1
      },
      "publishedDate": {
        "type": "string",
        "format": "date"
      },
      "genre": {
        "type": "string"
      }
    },
    "required": ["title", "author"],
    "additionalProperties": false
  }